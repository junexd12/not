-- GabGui mini Rayfield-style clone (STYLING ONLY - No Functionality)
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- Theme (easy to tweak)
local THEME = {
    Background = Color3.fromRGB(25,25,30),
    Header = Color3.fromRGB(35,35,40),
    Accent = Color3.fromRGB(180,0,255),
    Button = Color3.fromRGB(40,40,50),
    ToggleOn = Color3.fromRGB(180,0,255),
    ToggleOff = Color3.fromRGB(70,70,80),
    Text = Color3.fromRGB(235,235,235),
    Corner = 10,
    WindowSize = UDim2.new(0, 360, 0, 260)
}

-- Helper to create instances
local function new(class, props)
    local obj = Instance.new(class)
    if props then
        for k,v in pairs(props) do
            if k == "Parent" then obj.Parent = v else pcall(function() obj[k] = v end) end
        end
    end
    return obj
end

-- GabGui library (Styling Only)
local GabGui = {}
GabGui.__index = GabGui

function GabGui:CreateWindow(opts)
    opts = opts or {}
    local name = opts.Name or "GabGui Window"
    local size = opts.Size or THEME.WindowSize
    local pos = opts.Position or UDim2.new(0.5, -size.X.Offset/2, 0.5, -size.Y.Offset/2)
    
    local ScreenGui = new("ScreenGui",{
        Parent = PlayerGui, 
        ResetOnSpawn = false, 
        Name = "GabGui_"..tostring(name)
    })
    ScreenGui.IgnoreGuiInset = true

    -- Main Window Frame
    local frame = new("Frame",{
        Parent = ScreenGui, 
        Size = size, 
        Position = pos, 
        BackgroundColor3 = THEME.Background, 
        BorderSizePixel = 0
    })
    new("UICorner",{Parent = frame, CornerRadius = UDim.new(0, THEME.Corner)})
    new("UIStroke",{Parent = frame, Color = THEME.Accent, Thickness = 2})

    -- Header
    local header = new("Frame",{
        Parent = frame, 
        Size = UDim2.new(1,0,0,34), 
        BackgroundColor3 = THEME.Header,
        BorderSizePixel = 0
    })
    new("UICorner",{Parent = header, CornerRadius = UDim.new(0, THEME.Corner)})
    
    local titleLabel = new("TextLabel",{
        Parent = header, 
        Text = name, 
        BackgroundTransparency = 1, 
        TextColor3 = THEME.Text, 
        Font = Enum.Font.GothamBold, 
        TextSize = 16, 
        Position = UDim2.new(0,12,0), 
        Size = UDim2.new(1,-40,1,0), 
        TextXAlignment = Enum.TextXAlignment.Left
    })
    
    local closeBtn = new("TextButton",{
        Parent = header, 
        Text = "×", 
        Size = UDim2.new(0,34,1,0), 
        Position = UDim2.new(1,-34,0,0), 
        BackgroundTransparency = 1, 
        TextColor3 = Color3.fromRGB(255,100,100), 
        Font = Enum.Font.GothamBold, 
        TextSize = 22
    })

    -- Tab Bar
    local tabBar = new("ScrollingFrame",{
        Parent = frame, 
        Size = UDim2.new(1,-10,0,36), 
        Position = UDim2.new(0,5,0,38), 
        BackgroundTransparency = 1, 
        ScrollBarThickness = 6, 
        CanvasSize = UDim2.new(0,0,0,0), 
        ScrollingDirection = Enum.ScrollingDirection.X
    })
    tabBar.AutomaticCanvasSize = Enum.AutomaticSize.X
    tabBar.ScrollBarImageColor3 = THEME.Accent
    tabBar.ScrollBarImageTransparency = 0.5
    
    local tabList = new("UIListLayout",{
        Parent = tabBar,
        FillDirection = Enum.FillDirection.Horizontal,
        Padding = UDim.new(0,6),
        HorizontalAlignment = Enum.HorizontalAlignment.Left
    })

    -- Content Holder
    local contentHolder = new("Frame",{
        Parent = frame, 
        Size = UDim2.new(1,-10,1,-84), 
        Position = UDim2.new(0,5,0,78), 
        BackgroundTransparency = 1
    })

    local WindowObj = {}
    WindowObj._tabs = {}
    WindowObj.ActiveTab = nil

    function WindowObj:CreateTab(title, icon)
        -- Tab Button
        local tabBtn = new("TextButton",{
            Parent = tabBar, 
            Size = UDim2.new(0,110,1,0), 
            BackgroundColor3 = THEME.Button, 
            Text = title, 
            Font = Enum.Font.GothamSemibold, 
            TextSize = 14, 
            TextColor3 = THEME.Text,
            BorderSizePixel = 0
        })
        new("UICorner",{Parent = tabBtn, CornerRadius = UDim.new(0,8)})
        new("UIStroke",{Parent = tabBtn, Color = THEME.Accent, Thickness = 1, Transparency = 0.5})

        -- Tab Panel
        local tabPanel = new("ScrollingFrame",{
            Parent = contentHolder, 
            Size = UDim2.new(1,0,1,0), 
            Position = UDim2.new(0,0,0,0), 
            CanvasSize = UDim2.new(0,0,0,0), 
            BackgroundTransparency = 1, 
            ScrollBarThickness = 6,
            BorderSizePixel = 0
        })
        tabPanel.AutomaticCanvasSize = Enum.AutomaticSize.Y
        tabPanel.ScrollBarImageColor3 = THEME.Accent
        tabPanel.ScrollBarImageTransparency = 0.7
        tabPanel.Visible = false
        
        local layout = new("UIListLayout",{
            Parent = tabPanel, 
            Padding = UDim.new(0,8), 
            SortOrder = Enum.SortOrder.LayoutOrder
        })

        -- Set first tab as active
        if #WindowObj._tabs == 0 then
            tabPanel.Visible = true
            tabBtn.BackgroundColor3 = THEME.Accent
            new("UIStroke",{Parent = tabBtn, Color = THEME.Accent, Thickness = 2, Transparency = 0})
        end

        local TabObj = {}
        TabObj.Button = tabBtn
        TabObj.Panel = tabPanel

        -- Section (Visual Only)
        function TabObj:CreateSection(title)
            local sec = new("Frame",{
                Parent = tabPanel, 
                Size = UDim2.new(1, -20, 0, 26), 
                BackgroundTransparency = 1,
                BorderSizePixel = 0
            })
            local secLabel = new("TextLabel",{
                Parent = sec, 
                Text = title or "", 
                BackgroundTransparency = 1, 
                TextColor3 = THEME.Text, 
                Font = Enum.Font.GothamBold, 
                TextSize = 15, 
                Size = UDim2.new(1,0,1,0), 
                TextXAlignment = Enum.TextXAlignment.Left,
                BorderSizePixel = 0
            })
            new("UIStroke",{Parent = sec, Color = THEME.Accent, Thickness = 1, Transparency = 0.8})
            return TabObj
        end

        -- Button (Visual Only)
        function TabObj:CreateButton(data)
            data = data or {}
            local name = data.Name or "Button"

            local btn = new("TextButton",{
                Parent = tabPanel,
                Size = UDim2.new(1, -20, 0, 36),
                BackgroundColor3 = THEME.Button,
                Text = "  " .. name,
                TextXAlignment = Enum.TextXAlignment.Left,
                Font = Enum.Font.Gotham,
                TextSize = 14,
                TextColor3 = THEME.Text,
                BorderSizePixel = 0,
                AutoButtonColor = false
            })

            -- Rounded corners
            new("UICorner",{Parent = btn, CornerRadius = UDim.new(0, 8)})
            
            -- Purple outline (Rayfield-style)
            new("UIStroke",{
                Parent = btn,
                Color = Color3.fromRGB(170, 0, 255),
                Thickness = 1.6,
                Transparency = 0,
                ApplyStrokeMode = Enum.ApplyStrokeMode.Border
            })

            -- Purple glow effect
            local glow = new("Frame",{
                Parent = btn,
                Size = UDim2.new(1, 12, 1, 12),
                Position = UDim2.new(0, -6, 0, -6),
                BackgroundColor3 = Color3.fromRGB(180, 120, 255),
                BackgroundTransparency = 0.6,
                ZIndex = btn.ZIndex - 1,
                BorderSizePixel = 0
            })
            new("UICorner",{Parent = glow, CornerRadius = UDim.new(0, 8)})

            -- Hover styling (visual only)
            btn.MouseEnter:Connect(function()
                TweenService:Create(btn, TweenInfo.new(0.3, Enum.EasingStyle.Exponential), {
                    BackgroundColor3 = Color3.fromRGB(55, 0, 110)
                }):Play()
            end)
            
            btn.MouseLeave:Connect(function()
                TweenService:Create(btn, TweenInfo.new(0.3, Enum.EasingStyle.Exponential), {
                    BackgroundColor3 = THEME.Button
                }):Play()
            end)

            return btn
        end

        -- Toggle (Visual Only)
        function TabObj:CreateToggle(data)
            data = data or {}
            local name = data.Name or "Toggle"
            local state = data.CurrentValue or false

            -- Main container
            local container = new("Frame", {
                Parent = tabPanel,
                Size = UDim2.new(1, -20, 0, 36),
                BackgroundColor3 = THEME.Button,
                BackgroundTransparency = 0,
                BorderSizePixel = 0,
                ClipsDescendants = false
            })
            new("UICorner", {Parent = container, CornerRadius = UDim.new(0, 8)})

            -- Main container glow outline
            local containerStroke = new("UIStroke", {
                Parent = container,
                Color = Color3.fromRGB(170, 0, 255),
                Transparency = 0.2,
                Thickness = 1.3
            })

            -- Purple cover-flow glow behind container
            local glow = new("Frame", {
                Parent = container,
                Size = UDim2.new(1, 12, 1, 12),
                Position = UDim2.new(0, -6, 0, -6),
                BackgroundColor3 = Color3.fromRGB(180, 120, 255),
                BackgroundTransparency = 0.6,
                ZIndex = container.ZIndex - 1,
                BorderSizePixel = 0
            })
            new("UICorner", {Parent = glow, CornerRadius = UDim.new(0, 8)})

            -- Label
            local label = new("TextLabel", {
                Parent = container,
                Position = UDim2.new(0, 8, 0, 0),
                Size = UDim2.new(0.7, 0, 1, 0),
                BackgroundTransparency = 1,
                Text = name,
                TextXAlignment = Enum.TextXAlignment.Left,
                TextColor3 = THEME.Text,
                Font = Enum.Font.Gotham,
                TextSize = 14
            })

            -- Switch & knob
            local switch = new("Frame", {
                Parent = container,
                Size = UDim2.new(0, 46, 0, 24),
                Position = UDim2.new(1, -56, 0.5, -12),
                BackgroundColor3 = state and THEME.ToggleOn or THEME.ToggleOff,
                BorderSizePixel = 0
            })
            new("UICorner", {Parent = switch, CornerRadius = UDim.new(1, 0)})

            local knob = new("Frame", {
                Parent = switch,
                Size = UDim2.new(0, 20, 0, 20),
                Position = state and UDim2.new(1, -22, 0, 2) or UDim2.new(0, 2, 0, 2),
                BackgroundColor3 = Color3.fromRGB(240, 240, 240),
                BorderSizePixel = 0
            })
            new("UICorner", {Parent = knob, CornerRadius = UDim.new(1, 0)})

            -- Switch outline (UIStroke)
            new("UIStroke", {
                Parent = switch,
                Color = Color3.fromRGB(170, 0, 255),
                Transparency = 0.4,
                Thickness = 1.3
            })

            -- Fade-in animation
            TweenService:Create(container, TweenInfo.new(0.7, Enum.EasingStyle.Exponential), {BackgroundTransparency = 0}):Play()
            TweenService:Create(label, TweenInfo.new(0.7, Enum.EasingStyle.Exponential), {TextTransparency = 0}):Play()

            -- Hover animation (visual only)
            container.MouseEnter:Connect(function()
                TweenService:Create(container, TweenInfo.new(0.6, Enum.EasingStyle.Exponential), {
                    BackgroundColor3 = Color3.fromRGB(55, 0, 110)
                }):Play()
            end)
            container.MouseLeave:Connect(function()
                TweenService:Create(container, TweenInfo.new(0.6, Enum.EasingStyle.Exponential), {
                    BackgroundColor3 = THEME.Button
                }):Play()
            end)

            return {
                Set = function() end, -- Empty function
                Get = function() return state end
            }
        end

        -- Slider (Visual Only)
        function TabObj:CreateSlider(SliderSettings)
            SliderSettings = SliderSettings or {}
            local name = SliderSettings.Name or "Slider"
            local min = (SliderSettings.Range and SliderSettings.Range[1]) or 0
            local max = (SliderSettings.Range and SliderSettings.Range[2]) or 100
            local cur = SliderSettings.CurrentValue or min
            local suffix = SliderSettings.Suffix or ""

            -- Purple dark container
            local container = new("Frame", {
                Parent = tabPanel,
                Size = UDim2.new(1, -20, 0, 48),
                BackgroundColor3 = Color3.fromRGB(40,40,50),
                BorderSizePixel = 0
            })
            new("UICorner", {Parent = container, CornerRadius = UDim.new(0, 8)})
            new("UIStroke", {
                Parent = container,
                Color = Color3.fromRGB(170, 0, 255),
                Transparency = 0.3,
                Thickness = 1.4
            })

            local label = new("TextLabel", {
                Parent = container,
                Size = UDim2.new(1, 0, 0, 18),
                Position = UDim2.new(0, 0, 0, 4),
                BackgroundTransparency = 1,
                Text = name .. " : " .. tostring(cur) .. (suffix ~= "" and " " .. suffix or ""),
                TextColor3 = THEME.Text,
                Font = Enum.Font.Gotham,
                TextSize = 14,
                TextXAlignment = Enum.TextXAlignment.Left
            })

            local track = new("Frame", {
                Parent = container,
                Size = UDim2.new(1, -32, 0, 10),
                Position = UDim2.new(0, 16, 0, 30),
                BackgroundColor3 = Color3.fromRGB(50, 0, 90),
                BorderSizePixel = 0
            })
            new("UICorner", {Parent = track, CornerRadius = UDim.new(0, 6)})
            new("UIStroke", {
                Parent = track,
                Color = Color3.fromRGB(120, 0, 200),
                Transparency = 0.5
            })

            local fill = new("Frame", {
                Parent = track,
                Size = UDim2.new((cur - min) / (max - min), 0, 1, 0),
                BackgroundColor3 = Color3.fromRGB(170, 0, 255),
                BorderSizePixel = 0
            })
            new("UICorner", {Parent = fill, CornerRadius = UDim.new(0, 6)})
            new("UIStroke", {
                Parent = fill,
                Color = Color3.fromRGB(180, 0, 255),
                Transparency = 0.2
            })

            -- Hover effect (visual only)
            container.MouseEnter:Connect(function()
                TweenService:Create(container, TweenInfo.new(0.4, Enum.EasingStyle.Exponential), {
                    BackgroundColor3 = Color3.fromRGB(35, 0, 70)
                }):Play()
            end)
            container.MouseLeave:Connect(function()
                TweenService:Create(container, TweenInfo.new(0.4, Enum.EasingStyle.Exponential), {
                    BackgroundColor3 = Color3.fromRGB(25, 0, 45)
                }):Play()
            end)

            return {
                Set = function() end, -- Empty function
                Get = function() return cur end
            }
        end

        -- Input Box (Visual Only)
        function TabObj:CreateInput(data)
            data = data or {}
            local name = data.Name or "Input"
            local placeholder = data.PlaceholderText or "Type here..."
            local curVal = data.CurrentValue or ""

            --the whole input element)
            local container = new("Frame",{
                Parent = tabPanel,
                Size = UDim2.new(1, -20, 0, 36),
                BackgroundColor3 = Color3.fromRGB(40,40,50),
                BackgroundTransparency = 0,
                BorderSizePixel = 0
            })
            new("UICorner",{Parent = container, CornerRadius = UDim.new(0, 8)})
            new("UIStroke",{Parent = container, Color = Color3.fromRGB(160, 0, 255), Transparency = 0.4, Thickness = 1.2})

            -- Label (left side text)
            local label = new("TextLabel",{
                Parent = container,
                BackgroundTransparency = 1,
                Size = UDim2.new(0.4, 0, 1, 0),
                Text = name,
                Font = Enum.Font.Gotham,
                TextSize = 14,
                TextColor3 = THEME.Text,
                TextXAlignment = Enum.TextXAlignment.Left
            })

            -- TextBox (the part you type in)
            local box = new("TextBox",{
                Parent = container,
                Size = UDim2.new(0.55, -8, 0.8, 0),
                Position = UDim2.new(0.4, 8, 0.1, 0),
                BackgroundTransparency = 1,
                BorderSizePixel = 0,
                Text = curVal,
                PlaceholderText = placeholder,
                PlaceholderColor3 = Color3.fromRGB(160, 100, 220),
                TextColor3 = THEME.Text,
                Font = Enum.Font.GothamBold,
                TextSize = 14,
                ClearTextOnFocus = false,
                TextXAlignment = Enum.TextXAlignment.Left
            })

            -- Accent line under box
            local underline = new("Frame",{
                Parent = box,
                AnchorPoint = Vector2.new(0, 1),
                Position = UDim2.new(0, 0, 1, 0),
                Size = UDim2.new(1, 0, 0, 2),
                BackgroundColor3 = Color3.fromRGB(160, 0, 255),
                BackgroundTransparency = 0.4,
                BorderSizePixel = 0
            })

            -- Hover effect (visual only)
            container.MouseEnter:Connect(function()
                TweenService:Create(underline, TweenInfo.new(0.3, Enum.EasingStyle.Exponential), {
                    BackgroundTransparency = 0
                }):Play()
            end)

            container.MouseLeave:Connect(function()
                TweenService:Create(underline, TweenInfo.new(0.3, Enum.EasingStyle.Exponential), {
                    BackgroundTransparency = 0.4
                }):Play()
            end)

            return {
                Set = function() end, -- Empty function
                Get = function() return curVal end
            }
        end

        -- Dropdown (Visual Only)
        function TabObj:CreateDropdown(data)
            data = data or {}
            local name = data.Name or "Dropdown"
            local options = data.Options or {}
            if #options == 0 then return end

            local multi = data.MultipleOptions or false
            local selected = multi and {} or { data.CurrentOption or options[1] }

            -- Create main dropdown container (GabGui purple-glow style)
            local container = new("Frame", {
                Parent = tabPanel,
                Size = UDim2.new(1, -20, 0, 36),
                BackgroundColor3 = THEME.Button,
                BorderSizePixel = 0,
                ClipsDescendants = false
            })
            new("UICorner", { Parent = container, CornerRadius = UDim.new(0, 8) })

            -- Purple accent UIStroke
            local stroke = new("UIStroke", {
                Parent = container,
                Color = Color3.fromRGB(170, 0, 255),
                Transparency = 0.2,
                Thickness = 1.3
            })

            local label = new("TextLabel", {
                Parent = container,
                Size = UDim2.new(0.6, 0, 1, 0),
                BackgroundTransparency = 1,
                Text = name,
                TextXAlignment = Enum.TextXAlignment.Left,
                TextColor3 = THEME.Text,
                Font = Enum.Font.Gotham,
                TextSize = 14
            })

            local btn = new("TextButton", {
                Parent = container,
                Size = UDim2.new(0.4, -4, 1, 0),
                Position = UDim2.new(0.6, 4, 0, 0),
                Text = selected[1] or "None ▼",
                BackgroundTransparency = 1,
                TextColor3 = THEME.Text,
                Font = Enum.Font.GothamBold,
                TextSize = 14
            })

            -- Dropdown list panel (visual only - always visible for styling demo)
            local dropdownFrame = new("ScrollingFrame", {
                Parent = tabPanel,
                Size = UDim2.new(1, -20, 0, math.min(#options, 5) * 30 + 6),
                BackgroundColor3 = THEME.Button,
                BorderSizePixel = 0,
                Visible = true,
                ScrollBarThickness = 4,
                ScrollBarImageColor3 = Color3.fromRGB(180, 120, 255),
                CanvasSize = UDim2.new(0, 0, 0, 0),
                AutomaticCanvasSize = Enum.AutomaticSize.Y,
                ClipsDescendants = true,
                Position = UDim2.new(0, 0, 0, 44)
            })
            new("UICorner", { Parent = dropdownFrame, CornerRadius = UDim.new(0, 8) })
            new("UIStroke", {
                Parent = dropdownFrame,
                Color = Color3.fromRGB(140, 0, 255),
                Transparency = 0.4
            })

            local listLayout = new("UIListLayout", {
                Parent = dropdownFrame,
                Padding = UDim.new(0, 2)
            })

            -- Create option buttons (visual only)
            for i, option in ipairs(options) do
                local optBtn = new("TextButton", {
                    Parent = dropdownFrame,
                    Size = UDim2.new(1, 0, 0, 28),
                    Text = option,
                    BackgroundColor3 = i <= #selected and Color3.fromRGB(180, 120, 255) or THEME.Button,
                    TextColor3 = THEME.Text,
                    Font = Enum.Font.Gotham,
                    TextSize = 14,
                    BorderSizePixel = 0,
                    BackgroundTransparency = 0
                })
                new("UICorner", { Parent = optBtn, CornerRadius = UDim.new(0, 6) })
                new("UIStroke", {
                    Parent = optBtn,
                    Color = Color3.fromRGB(150, 0, 255),
                    Transparency = i <= #selected and 0.2 or 1
                })

                -- Hover effect (visual only)
                optBtn.MouseEnter:Connect(function()
                    TweenService:Create(optBtn, TweenInfo.new(0.25, Enum.EasingStyle.Exponential), {
                        BackgroundColor3 = Color3.fromRGB(60, 0, 100)
                    }):Play()
                end)
                optBtn.MouseLeave:Connect(function()
                    TweenService:Create(optBtn, TweenInfo.new(0.25, Enum.EasingStyle.Exponential), {
                        BackgroundColor3 = i <= #selected and Color3.fromRGB(180, 120, 255) or THEME.Button
                    }):Play()
                end)
            end

            listLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
                dropdownFrame.CanvasSize = UDim2.new(0, 0, 0, listLayout.AbsoluteContentSize.Y + 8)
            end)

            return {
                Get = function() return selected end,
                Set = function() end -- Empty function
            }
        end

        -- Keybind (Visual Only)
        function TabObj:CreateKeybind(data)
            data = data or {}
            local name = data.Name or "Keybind"
            local key = data.CurrentKeybind or "Q"

            local container = new("Frame", {
                Parent = tabPanel,
                Size = UDim2.new(1, -20, 0, 36),
                BackgroundColor3 = THEME.Button,
                BackgroundTransparency = 0,
                BorderSizePixel = 0
            })
            new("UICorner", { Parent = container, CornerRadius = UDim.new(0, 8) })
            new("UIStroke", {
                Parent = container,
                Color = Color3.fromRGB(170, 0, 255),
                Transparency = 0.25,
                Thickness = 1.3
            })

            local label = new("TextLabel", {
                Parent = container,
                Position = UDim2.new(0, 8, 0, 0),
                Size = UDim2.new(0.7, 0, 1, 0),
                BackgroundTransparency = 1,
                Text = name,
                TextXAlignment = Enum.TextXAlignment.Left,
                TextColor3 = THEME.Text Enum.Font.Gotham,
                TextSize = 14
            })

            -- Keybind display box
            local box = new("TextBox", {
                Parent = container,
                Size = UDim2.new(0.3, -8, 1, 0),
                Position = UDim2.new(0.7, 4, 0, 0),
                Text = key,
                BackgroundTransparency = 1,
                TextColor3 = THEME.Text,
                Font = Enum.Font.GothamBold,
                TextSize = 14,
                BorderSizePixel = 0
            })

            new("UIStroke", {
                Parent = box,
                Color = Color3.fromRGB(150, 0, 255),
                Transparency = 0.4
            })

            -- Fade-in animation
            TweenService:Create(container, TweenInfo.new(0.7, Enum.EasingStyle.Exponential), { BackgroundTransparency = 0 }):Play()
            TweenService:Create(label, TweenInfo.new(0.7, Enum.EasingStyle.Exponential), { TextTransparency = 0 }):Play()

            -- Hover glow (visual only)
            container.MouseEnter:Connect(function()
                TweenService:Create(container, TweenInfo.new(0.6, Enum.EasingStyle.Exponential), {
                    BackgroundColor3 = Color3.fromRGB(55, 0, 110)
                }):Play()
            end)
            container.MouseLeave:Connect(function()
                TweenService:Create(container, TweenInfo.new(0.6, Enum.EasingStyle.Exponential), {
                    BackgroundColor3 = THEME.Button
                }):Play()
            end)

            return {
                Get = function() return key end,
                Set = function() end -- Empty function
            }
        end

        -- Label (Visual Only)
        function TabObj:CreateLabel(text, color, font, bold)
            local lbl = new("TextLabel",{
                Parent = tabPanel, 
                Size = UDim2.new(1,-20,0,28), 
                BackgroundTransparency = 1, 
                Text = text or "", 
                TextColor3 = color or THEME.Text, 
                Font = font or Enum.Font.Gotham, 
                TextSize = 14, 
                TextXAlignment = Enum.TextXAlignment.Left,
                BorderSizePixel = 0
            })
            
            -- Add subtle styling
            new("UIStroke",{Parent = lbl, Color = THEME.Accent, Thickness = 0.5, Transparency = 0.8})
            return lbl
        end

        -- Paragraph (Visual Only)
        function TabObj:CreateParagraph(data)
            data = data or {}
            local titleText = data.Title or "Paragraph Title"
            local contentText = data.Content or "Paragraph content here."

            -- Create the main paragraph frame
            local frame = new("Frame", {
                Parent = tabPanel,
                BackgroundColor3 = THEME.Button,
                Size = UDim2.new(1, -20, 0, 0),
                BorderSizePixel = 0
            })

            -- Purple outline
            new("UIStroke", {
                Parent = frame,
                Color = THEME.Accent,
                Thickness = 1.8,
                Transparency = 0.3
            })

            -- Rounded corners
            new("UICorner", {
                Parent = frame,
                CornerRadius = UDim.new(0, 8)
            })

            -- Title
            local title = new("TextLabel", {
                Parent = frame,
                Size = UDim2.new(1, -10, 0, 18),
                Position = UDim2.new(0, 8, 0, 5),
                BackgroundTransparency = 1,
                Font = Enum.Font.GothamBold,
                Text = titleText,
                TextColor3 = THEME.Text,
                TextXAlignment = Enum.TextXAlignment.Left,
                TextSize = 14,
                BorderSizePixel = 0
            })

            -- Content
            local content = new("TextLabel", {
                Parent = frame,
                Size = UDim2.new(1, -16, 0, 0),
                Position = UDim2.new(0, 8, 0, 24),
                BackgroundTransparency = 1,
                Font = Enum.Font.Gotham,
                Text = contentText,
                TextColor3 = THEME.Text,
                TextWrapped = true,
                TextXAlignment = Enum.TextXAlignment.Left,
                TextSize = 14,
                BorderSizePixel = 0
            })

            -- Auto-size the frame to fit text
            local function resize()
                local textService = game:GetService("TextService")
                local textBounds = textService:GetTextSize(content.Text, content.TextSize, content.Font, Vector2.new(frame.AbsoluteSize.X - 20, math.huge))
                frame.Size = UDim2.new(1, -20, 0, textBounds.Y + 35)
                content.Size = UDim2.new(1, -16, 0, textBounds.Y)
            end

            resize()
            content:GetPropertyChangedSignal("Text"):Connect(resize)

            return {
                Set = function() end -- Empty function
            }
        end

        table.insert(WindowObj._tabs, TabObj)
        return TabObj
    end

    return WindowObj
end

-- Return the library
return GabGui

